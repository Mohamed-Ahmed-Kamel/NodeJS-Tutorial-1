            <%- include('./partials/footer') %>








                <script>

                    const button = document.querySelector(".create");
                    const buttonAtt = button.getAttribute("data-idLink");

                    button.addEventListener('click', () => {

                        fetch(`/all-articles/${buttonAtt}`, { method: 'DELETE' })
                        .then((res) => res.json())
                        .then((data) => window.location.href=data.index)
                        .catch((err) => {console.log(err);});
                            
                    })




                </script>

    </body>

</html>